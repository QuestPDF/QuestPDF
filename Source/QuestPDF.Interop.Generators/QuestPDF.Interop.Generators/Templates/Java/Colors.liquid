public final class Color {
    private final int hex;

    public Color(int hexVal) {
        this.hex = hexVal;
    }

    public int getHex() {
        return hex;
    }

    public int getAlpha() {
        return (hex >>> 24) & 0xFF;
    }

    public int getRed() {
        return (hex >>> 16) & 0xFF;
    }

    public int getGreen() {
        return (hex >>> 8) & 0xFF;
    }

    public int getBlue() {
        return hex & 0xFF;
    }

    @Override
    public String toString() {
        if (getAlpha() == 0xFF) {
            return String.format("#%02X%02X%02X", getRed(), getGreen(), getBlue());
        }

        return String.format("#%02X%02X%02X%02X", getAlpha(), getRed(), getGreen(), getBlue());
    }
}

