/**
 * Represents a color with ARGB components.
 */
@JvmInline
value class Color(val hex: UInt) {

}

/**
 * Predefined color constants.
 */
object Colors {
{% for color in basicColors %}
    val {{ color.name | screamingSnakeCase }} = Color({{ color.value }}u)
{% endfor %}

{% for group in colorGroups %}
    object {{ group.name | pascalCase }} {
{% for color in group.colors %}
        val {{ color.name | screamingSnakeCase }} = Color({{ color.value }}u)
{% endfor %}
    }

{% endfor %}
}
