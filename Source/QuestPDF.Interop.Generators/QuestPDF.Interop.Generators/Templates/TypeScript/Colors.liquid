export class Color {
  public readonly hex: number;

  constructor(hexVal: number) {
    this.hex = hexVal >>> 0;
  }

  toString(): string {
    return `#${this.hex.toString(16).padStart(8, '0')}`;
  }
}

export const Colors = {
{% for color in basicColors %}
{{ color.name }}: new Color({{ color.value }}),
{% endfor %}
{% for group in colorGroups %}
    {{ group.Name }}: {
{% for color in group.colors %}
        {{ color.name }}: new Color({{ color.value }}),
{% endfor %}
    },
{% endfor %}
} as const;
